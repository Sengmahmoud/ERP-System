@model ERP.ViewModels.UserRoleViewModel

<h2>اضافة صلاحية إلى المستخدم</h2>

<form asp-controller="Admin" asp-action="AddUserToRole" method="post">
    <input type="hidden" name="roleId" value="@Model.RoleId" />
    <select asp-for="UserId"
            asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
        <option>اختر المستخدم</option>
    </select>
    <input class="btn btn-primary" value="حفظ" type="submit" />
</form>

<a asp-action="RolesManagement" class="btn btn-danger">الغاء</a>
