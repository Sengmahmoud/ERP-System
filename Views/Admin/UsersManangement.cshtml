@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

<h2>User Management</h2>
@if (!Model.Any())
{
    <h2>لم يتم اضافة مستخدمين بعد </h2>
}
else
{
    <table class="table table-condensed table-bordered" header header-content="ادارة المستخدمين">
        <tr>
            
            <th>اسم المستخدم</th>
            <th>البريد الالكترونى</th>
            <th>#</th>
        </tr>

        @foreach (IdentityUser user in Model)
        {
            <tr>
                
                <td>@user.UserName</td>
                <td>@user.Email</td>

                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">تعديل</a>
                        <button type="submit" onclick="return confirm('هل أنت متأكد من انك تريد حذف هذا المستخدم');" class="btn btn-sm btn-danger">
                            حذف
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}

<p>
    <a class="btn btn-primary" asp-action="AddUser">اضافة مستخدم جديد</a>
    @*<a anchor-style="primary" asp-action="AddUser">Add new user</a>*@
</p>