@model ERP.ViewModels.EditRoleViewModel

<h2>تعديل الصلاحية</h2>

<form asp-controller="Admin" asp-action="EditRole" method="post" class="form-horizontal" role="form">
    <h4>التفاصيل الجديدة</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Id" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Id" class="form-control" readonly="readonly" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RoleName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="حفظ" />
            <a asp-action="RolesManagement" class="btn btn-danger">الغاء</a>
        </div>
    </div>
</form>

<h3>المستخدمون داخل هذا الدور</h3>
@if (Model.Users != null)
{
<ul>
    @foreach (var user in Model.Users)
    {
        <li>
            @user
        </li>
    }
</ul>
}
<a asp-action="AddUserToRole" asp-route-roleId="@Model.Id" class="btn btn-primary">اضافة مستخدم إلى هذا الدور</a>
<a asp-action="DeleteUserFromRole" asp-route-roleId="@Model.Id" class="btn btn-primary">ازالة مستخدم من الدور</a>