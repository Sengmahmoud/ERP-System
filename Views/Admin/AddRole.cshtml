@model ERP.ViewModels.AddRoleViewModel;




<h2>انشاء دور جديد</h2>

<form asp-controller="Admin" asp-action="AddRole" method="post" class="form-horizontal" role="form">
    
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="RoleName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="حفظ" />
        </div>
    </div>
</form>
