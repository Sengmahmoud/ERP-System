@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

<h2>Role management</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">لم يتم اضافة اصلاحيات بعد</td></tr>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            <th>م</th>
            <th>الصلاحية</th>
            <th>المستخدمين</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form asp-action="DeleteRole" asp-route-Id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-Id="@role.Id">تعديل</a>
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('هل انت متأكد من انك تريد حذف هذا الدور');">
                            حذف
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}